<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textnamevent"
        android:layout_marginLeft="5dp"
        android:textSize="20sp"
        android:layout_marginBottom="3dp"
        android:layout_marginTop="3dp"
        android:paddingBottom="3dp"
        android:paddingTop="3dp"
        android:drawableLeft="@drawable/ic_name_tag"
        android:gravity="center_vertical"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="normal|bold" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/textdatetime"
            android:gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:drawableLeft="@drawable/ic_alert_name"
            android:textColor="@color/com_facebook_button_background_color_pressed" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/viewRecipe"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@android:color/transparent"
            android:drawableLeft="@drawable/ic_view_button" />

        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/buttoncancelalarm"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:drawableRight="@drawable/ic_remove_shopping" />
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        app:srcCompat="@android:drawable/ic_menu_crop"
        android:id="@+id/imageSchedule"
        android:layout_height="200dp" />
</LinearLayout>