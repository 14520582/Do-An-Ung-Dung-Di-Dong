<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">

    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/name"
        android:textSize="24sp"
        android:textStyle="normal|bold"
        android:paddingLeft="12dp" />

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/ic_alert_name"
            android:id="@+id/imagealert"
            android:layout_weight="0.00"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp" />

        <TextView
            android:layout_height="40dp"
            android:id="@+id/Time"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:textColorLink="@color/colorAccent"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:layout_marginLeft="47dp" />

        <TextView
            android:text="@string/dvtime"
            android:layout_width="wrap_content"
            android:id="@+id/textView3"
            android:layout_height="40dp"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:layout_alignParentLeft="false"
            android:layout_marginLeft="67dp" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:srcCompat="@drawable/ic_ration_name"
            android:id="@+id/imageView4"
            android:layout_weight="0.00"
            android:layout_marginLeft="127dp" />

        <TextView
            android:layout_height="40dp"
            android:id="@+id/Ration"
            android:textColorHint="@color/com_facebook_button_background_color_disabled"
            android:textColorLink="@color/colorAccent"
            android:gravity="center_vertical"
            android:layout_width="wrap_content"
            android:paddingRight="2dp"
            android:paddingLeft="2dp"
            android:layout_marginLeft="172dp" />
        <TextView
            android:text="@string/dvration"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:id="@+id/textView4"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:layout_marginLeft="192dp" />

        <Button
            android:layout_height="40dp"
            android:id="@+id/buttonView"

            android:drawableStart="@drawable/ic_view_button"
            android:background="@android:color/transparent"
            android:layout_width="40dp"
            android:gravity="center_vertical"
            android:paddingLeft="3dp"
            android:layout_marginRight="5dp"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"

        android:id="@+id/imageCover"
        android:layout_weight="0.00" />


</LinearLayout>